/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.tabs{
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 120rpx;
  background: #fff;
  box-shadow: 0px -1px 2rpx -1px rgba(204, 204, 204, 1)
}
.tab-item{
   display: flex;
  flex-direction: column;
  align-items: center;
  float: left;
  width: 33.3%
}
.tabs-img{
  margin-top: 20rpx;
  width: 48rpx;
  height: 48rpx;
}
.tab-text{
  font-size: 32rpx;
  color: rgba(129,129,129,1);
}