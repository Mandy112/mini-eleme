.container {
  width: 100%;
  height: 100%;
  background: rgba(246, 246, 246, 1);
  color: rgba(129, 129, 129, 1);
  padding-bottom: 180rpx;
}

/* 搜索框部分 */

.header {
  height: 140rpx;
  width: 100%;
  background: rgba(0, 151, 253, 1);
  position: relative;
}

.searchbar {
  /* margin: 0 32rpx; */
  background: #fff;
  border-radius: 32rpx;
  height: 56rpx;
  position: absolute;
  left: 32rpx;
  right: 32rpx;
  bottom: 16rpx;
  text-align: center;
}

.searchcion {
  vertical-align: middle;
}

.text {
  margin-left: 8rpx;
  font-size: 14px;
  vertical-align: middle;
  color: rgba(129, 129, 129, 1);
}

/* 海报区域 */

.poster {
  width: 100%;
  height: 210rpx;
  margin-bottom: 20rpx;
}

.poster image {
  width: 100%;
  height: 210rpx;
}

/* 轮播图部分 */

.carousel {
  height: 340rpx;
  width: 100%;
  background: #fff;
  margin-bottom: 20rpx;
}

.carousel-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  float: left;
  width: 25%;
}

.carousel-item>text {
  font-size: 24rpx;
}

.carousel-img {
  width: 90rpx;
  height: 90rpx;
}

.filter-nav {
  width: 100%;
  background: #fff;
  height: 80rpx;
  display: table;
}

.filter-nav view {
  width: 25%;
  height: 100%;
  text-align: center;
  font-size: 28rpx;
  display: table-cell;
  vertical-align: middle;
  /* color: rgba(129,129,129,1); */
}

.triangle {
  width: 10rpx;
  height: 10rpx;
}
.shop{
  background: #fff;
  width: 100%;
  padding-bottom: 20rpx;
}
.shop-item {
  width: 100%;
  /* height: 200rpx; */
  background: #fff;
  padding: 40rpx 30rpx;
  overflow: hidden;
  box-shadow: 0px 0rpx 2rpx 0rpx rgba(204,204,204,1);
}
.shop-info{
  border-bottom:1px solid rgba(244,244,244,1);
  width: 686rpx;
  margin-right: 32rpx;
  overflow: hidden;
  padding-bottom: 4rpx;
}
.shop-img {
  width: 128rpx;
  height: 128rpx;
  float: left;
  margin-right: 20rpx;
}
